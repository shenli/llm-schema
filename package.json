{
  "name": "llm-schema",
  "version": "0.1.1",
  "description": "The ORM for LLM content. Type-safe schemas, validation, and prompt utilities for LLM-native apps.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "llm",
    "schema",
    "orm",
    "markdown",
    "validation"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "typescript": "^5.4.5",
    "vitest": "^1.5.1"
  }
}
